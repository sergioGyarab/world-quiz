rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Scores collection - everyone can read (for leaderboard), only verified users can write
    match /scores/{scoreId} {
      allow read: if true;
      allow create: if request.auth != null 
                    && request.auth.token.email_verified == true
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.username is string
                    && request.resource.data.score is number
                    && request.resource.data.score >= 0
                    && request.resource.data.score <= 25
                    && request.resource.data.gameMode is string
                    && (request.resource.data.gameMode == 'flag-match' 
                        || request.resource.data.gameMode == 'capital-match');
      allow update, delete: if request.auth != null 
                          && request.auth.token.email_verified == true
                          && resource.data.userId == request.auth.uid;
    }
    
    // Usernames collection - for unique username enforcement
    match /usernames/{userId} {
      // Anyone can read to check if username is taken (even before registration)
      allow read: if true;
      // User can create/update their own username record
      // Create: during registration (no email verification required yet)
      // Update: after login (any authenticated user can change their username)
      allow create, update: if request.auth != null 
                            && request.auth.uid == userId
                            && request.resource.data.username is string
                            && request.resource.data.username_lower is string;
      // Authenticated users can delete their username
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Streaks collection - for leaderboard with streaks
    match /streaks/{streakId} {
      // Everyone can read (for leaderboard display, including guests)
      allow read: if true;
      // Only verified users can create their own streak records
      allow create: if request.auth != null 
                    && request.auth.token.email_verified == true
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.username is string
                    && request.resource.data.streak is number
                    && request.resource.data.streak >= 0;
      // Users can update/delete their own streak records
      allow update, delete: if request.auth != null 
                          && request.auth.token.email_verified == true
                          && resource.data.userId == request.auth.uid;
    }
    
    // Daily streaks collection - for "Today" leaderboard
    match /dailyStreaks/{dailyStreakId} {
      // Everyone can read (for leaderboard display, including guests)
      allow read: if true;
      // Only verified users can create their own daily streak records
      allow create: if request.auth != null 
                    && request.auth.token.email_verified == true
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.username is string
                    && request.resource.data.streak is number
                    && request.resource.data.streak >= 0
                    && request.resource.data.date is string;
      // Users can update/delete their own daily streak records
      allow update, delete: if request.auth != null 
                          && request.auth.token.email_verified == true
                          && resource.data.userId == request.auth.uid;
    }
    
    // Leaderboard - everyone can read, but only authenticated users' scores are shown
    match /leaderboard/{entry} {
      allow read: if true;
      allow write: if false; // Only server-side functions should write here
    }
    
    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
